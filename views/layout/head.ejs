<body>
    <div class="mobile-container">

        <!-- Top Navigation Menu -->
        <div class="topnav">
          <a href="#home" class="active">Best Books!</a>
          <div id="myLinks">
            <a href="#news">search for book</a>
            <a href="#contact">add to favourite</a>
            <a href="#about">Home</a>
          </div>
          <a href="javascript:void(0);" class="icon" onclick="myFunction()">
            <i class="fa fa-bars"></i>
          </a>
        </div>
        
        <script>
        function myFunction() {
          var x = document.getElementById("myLinks");
          if (x.style.display === "block") {
            x.style.display = "none";
          } else {
            x.style.display = "block";
          }
        }
        </script>
